  <type id="SM_ASSETCLASS_JAVASCRIPT">
    <label>Javascript</label>
    <setfrompreview>false</setfrompreview>
    <accept>SM_ASSETTYPE_JAVASCRIPT</accept>
  </type>
  
  <type id="SM_ASSETCLASS_STYLESHEET">
    <label>CSS Stylesheet</label>
    <setfrompreview>false</setfrompreview>
    <accept>SM_ASSETTYPE_STYLESHEET</accept>
  </type>
  
  <type id="SM_ASSETCLASS_BROWSER_INSTRUCTION">
    <label>CSS or Javascript</label>
    <setfrompreview>false</setfrompreview>
    <accept>SM_ASSETTYPE_JAVASCRIPT</accept>
    <accept>SM_ASSETTYPE_STYLESHEET</accept>
  </type>
  
  <type id="SM_ASSETCLASS_SHOCKWAVE_FLASH">
    <label>Adobe Flash content</label>
    <setfrompreview>true</setfrompreview>
    <accept>SM_ASSETTYPE_SHOCKWAVE_FLASH</accept>
  </type>
  
  <type id="SM_ASSETCLASS_SOUND">
    <label>Audio files</label>
    <setfrompreview>true</setfrompreview>
    <accept>SM_ASSETTYPE_MP3</accept>
  </type>
  
  <type id="SM_ASSETCLASS_DOWNLOAD">
    <label>Files that usually need to be downloaded</label>
    <setfrompreview>true</setfrompreview>
    <accept>SM_ASSETTYPE_PDF</accept>
    <accept>SM_ASSETTYPE_MS_WORD</accept>
    <accept>SM_ASSETTYPE_MS_EXCEL</accept>
    <accept>SM_ASSETTYPE_MS_POWERPOINT</accept>
  </type>
  
  <type id="SM_ASSETCLASS_EXP1">
    <label>Exp1</label>
    <hide>true</hide>
    <setfrompreview>true</setfrompreview>
    <accept>SM_ASSETTYPE_HTML_FRAGMENT</accept>
    <accept>SM_ASSETTYPE_JPEG_IMAGE</accept>
    <accept>SM_ASSETTYPE_CONTAINER_TEMPLATE</accept>
  </type>
  
  <type id="SM_ASSETCLASS_CONTAINER">
    <hide>true</hide>
    <label>A Container</label>
    <accept>SM_ASSETTYPE_CONTAINER_TEMPLATE</accept>
  </type>
  
  <type id="SM_ASSETCLASS_ITEM_SPACE">
    <hide>true</hide>
    <label>A Dynamically loaded item</label>
  </type>
  
</placeholdertypes>
