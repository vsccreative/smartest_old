<?xml version="1.0" ?>

<placeholdertypes>
  
  <type id="SM_ASSETCLASS_RICH_TEXT">
    <label>Formatted text files</label>
    <accept>SM_ASSETTYPE_RICH_TEXT</accept>
    <accept>SM_ASSETTYPE_TEXTILE_TEXT</accept>
    <setfrompreview>true</setfrompreview>
    <descriptive>true</descriptive>
  </type>
  
  <type id="SM_ASSETCLASS_STATIC_IMAGE">
    <label>Images in any format</label>
    <setfrompreview>true</setfrompreview>
    <accept>SM_ASSETTYPE_JPEG_IMAGE</accept>
    <accept>SM_ASSETTYPE_PNG_IMAGE</accept>
    <accept>SM_ASSETTYPE_GIF_IMAGE</accept>
    <accept>SM_ASSETTYPE_SVG_IMAGE</accept>
    <gallery>true</gallery>
  </type>
  
  <type id="SM_ASSETCLASS_TEXT">
    <label>Any text, formatted or unformatted</label>
    <setfrompreview>true</setfrompreview>
    <accept>SM_ASSETTYPE_RICH_TEXT</accept>
    <accept>SM_ASSETTYPE_PLAIN_TEXT</accept>
    <accept>SM_ASSETTYPE_TEXTILE_TEXT</accept>
    <descriptive>true</descriptive>
  </type>
  
  <type id="SM_ASSETCLASS_MARKUP">
    <label>Markup fragments</label>
    <setfrompreview>true</setfrompreview>
    <accept>SM_ASSETTYPE_HTML_FRAGMENT</accept>
  </type>
  
  <type id="SM_ASSETCLASS_MAIN_FEATURE">
    <label>Main feature - article text, movie, audio or SVG graphic</label>
    <setfrompreview>true</setfrompreview>
    <accept>SM_ASSETTYPE_RICH_TEXT</accept>
    <accept>SM_ASSETTYPE_TEXTILE_TEXT</accept>
    <accept>SM_ASSETTYPE_HTML_FRAGMENT</accept>
    <accept>SM_ASSETTYPE_QUICKTIME_MOVIE</accept>
    <accept>SM_ASSETTYPE_YOUTUBE_CLIP</accept>
    <accept>SM_ASSETTYPE_VIMEO_CLIP</accept>
    <accept>SM_ASSETTYPE_SVG_IMAGE</accept>
    <accept>SM_ASSETTYPE_MP3</accept>
    <gallery>true</gallery>
  </type>
  
  <type id="SM_ASSETCLASS_MAIN_FEATURE_NOTEXT">
    <label>Same as a 'main feature' - but does not allow text</label>
    <setfrompreview>true</setfrompreview>
    <accept>SM_ASSETTYPE_HTML_FRAGMENT</accept>
    <accept>SM_ASSETTYPE_QUICKTIME_MOVIE</accept>
    <accept>SM_ASSETTYPE_YOUTUBE_CLIP</accept>
    <accept>SM_ASSETTYPE_VIMEO_CLIP</accept>
    <accept>SM_ASSETTYPE_SVG_IMAGE</accept>
    <accept>SM_ASSETTYPE_MP3</accept>
    <gallery>true</gallery>
  </type>
  
  <type id="SM_ASSETCLASS_MOVIE">
    <label>A movie in any format</label>
    <setfrompreview>true</setfrompreview>
    <accept>SM_ASSETTYPE_QUICKTIME_MOVIE</accept>
    <accept>SM_ASSETTYPE_FLASH_VIDEO</accept>
    <accept>SM_ASSETTYPE_YOUTUBE_CLIP</accept>
    <accept>SM_ASSETTYPE_VIMEO_CLIP</accept>
    <accept>SM_ASSETTYPE_MPEG_MOVIE</accept>
    <accept>SM_ASSETTYPE_WMV</accept>
    <gallery>true</gallery>
  </type>
  
   <type id="SM_ASSETCLASS_HOMEPAGE_SPLASH">
    <label>Homepage splash (high-impact, high compatibility)</label>
    <setfrompreview>true</setfrompreview>
    <accept>SM_ASSETTYPE_SHOCKWAVE_FLASH</accept>
    <accept>SM_ASSETTYPE_QUICKTIME_MOVIE</accept>
    <accept>SM_ASSETTYPE_VIMEO_CLIP</accept>
    <accept>SM_ASSETTYPE_JPEG_IMAGE</accept>
    <accept>SM_ASSETTYPE_PNG_IMAGE</accept>
    <accept>SM_ASSETTYPE_SVG_IMAGE</accept>
    <gallery>true</gallery>
  </type>
  
