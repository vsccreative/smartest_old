<?xml version="1.0" ?>
<datatypes>
    
    <type id="SM_DATATYPE_NUMERIC" valuetype="string">
        
        <label>Number</label>
        <description>A numeric value in standard notation such as an integer or decimal. Scientific notation, fractions and logarithms are not supported.</description>
        <usage>field,itemproperty</usage>
        <class>SmartestNumber</class>
        <long>false</long>
        <render template="System/Applications/Items/Presentation/CMS/property.default.tpl" />
        
    </type>
    
    <type id="SM_DATATYPE_SL_TEXT" valuetype="string">
        
        <label>Single-line Text</label>
        <description>Short piece of text such as first or last name. Maximum 255 characters.</description>
        <usage>field,itemproperty</usage>
        <class>SmartestString</class>
        <long>true</long>
        <render template="System/Applications/Items/Presentation/CMS/property.default.tpl" />
        
    </type>
    
    <type id="SM_DATATYPE_ML_TEXT" valuetype="string">
        <label>Multi-line Plain Text</label>
        <description>Longer piece of text (255 chars or more) where formatting is not important.</description>
        <usage>itemproperty</usage>
        <class>SmartestString</class>
        <long>false</long>
        <render template="System/Applications/Items/Presentation/CMS/property.default.tpl" />
        
    </type>
    
    <type id="SM_DATATYPE_BOOLEAN" valuetype="string">
        <label>Boolean</label>
        <description>A simple True/False value.</description>
        <usage>field,itemproperty</usage>
        <class>SmartestBoolean</class>
        <long>false</long>
        <render template="System/Applications/Items/Presentation/CMS/property.default.tpl" />
        
    </type>
    
    <type id="SM_DATATYPE_ASSET" valuetype="foreignkey">
        
        <label>File</label>
        <description>Behaves exactly as a placeholder on a static page.</description>
        <usage>itemproperty</usage>
        <long>false</long>
        
        <filter>
          <typesource type="smartest:assettypes" />
          <entitysource type="db" table="Assets" matchfield="asset_type" sortfield="asset_stringid" sitefield="asset_site_id" sharedfield="asset_shared" class="SmartestAsset" />
          <condition field="asset_deleted" value="1" operator="NOT_EQUAL" />
        </filter>
        
        <menu value="id" display="stringid" />
        
        <render template="System/Applications/Items/Presentation/CMS/property.asset.tpl" />
        
        <class>SmartestAsset</class>
        
    </type>
    
    <type id="SM_DATATYPE_ASSET_DOWNLOAD" valuetype="foreignkey">
        
        <label>File Download</label>
        <description>Creates a link that will cause the selected file to be downloaded.</description>
        <usage>itemproperty</usage>
        <long>false</long>
        
        <filter>
          <typesource type="smartest:assettypes" />
          <entitysource type="db" table="Assets" matchfield="asset_type" sortfield="asset_stringid" sitefield="asset_site_id" sharedfield="asset_shared" class="SmartestAsset" />
        </filter>
        
        <menu value="id" display="stringid" />
        
        <render template="System/Applications/Items/Presentation/CMS/property.download.tpl" />
        
        <class>SmartestAsset</class>
        
    </type>
    
