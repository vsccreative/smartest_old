        <class>SmartestContainer</class>
    </type>-->
    
    <type id="SM_DATATYPE_CMS_ITEM" valuetype="foreignkey">
        
        <label>CMS Item</label>
        <description>A single item from any model.</description>
        <usage>itemproperty</usage>
        <long>false</long>
        
        <filter>
          <typesource type="db" table="ItemClasses" matchfield="id" />
          <entitysource type="db" table="Items" matchfield="item_itemclass_id" sitefield="item_site_id" sharedfield="item_shared" class="SmartestItem" />
        </filter>
        
        <render template="System/Applications/Items/Presentation/CMS/property.cms_item.tpl" />
        
        <menu value="id" display="name" />
        
        <class>SmartestCmsItem</class>
        
    </type>
    
    <type id="SM_DATATYPE_CMS_ITEM_SET" valuetype="foreignkey">
        
        <label>CMS Item Set</label>
        <description>A group of items belonging to the same model, defined in the data manager. This is a data relationship and doesn't define how the set is displayed.</description>
        <usage>itemproperty</usage>
        <entitytype>Sets:id,label</entitytype>
        <long>false</long>
        
        <filter>
          <entitysource type="db" table="Sets" sitefield="set_site_id" sharedfield="set_shared" class="SmartestCmsItemSet" />
        </filter>
        
        <render template="System/Applications/Items/Presentation/CMS/property.cms_item_set.tpl" />
        
        <menu value="id" display="name" />
        
        <class>SmartestCmsItemSet</class>
        
    </type>
    
    <type id="SM_DATATYPE_DROPDOWN_MENU" valuetype="foreignkey">
        
        <label>Dropdown Menu</label>
        <description>A value from one of the dropdown menus defined in the dropdown menu editor.</description>
        <usage>field,itemproperty</usage>
        <long>false</long>
        
        <filter>
          <typesource type="db" table="DropDowns" matchfield="id" />
          <entitysource type="db" table="DropDownValues" matchfield="dropdownvalue_dropdown_id" class="SmartestDropdownOption" />
        </filter>
        
        <render template="System/Applications/Items/Presentation/CMS/property.dropdown_menu.tpl" />
        <menu value="value" display="label" />
        
        <class>SmartestDropdown</class>
        
    </type>
    
    <type id="SM_DATATYPE_HEX_COLOR" valuetype="string">
      
        <label>RGB Color</label>
        <description>A color</description>
        <usage>field,itemproperty</usage>
        <class>SmartestRgbColor</class>
        <long>false</long>
        <render template="System/Applications/Items/Presentation/CMS/property.default.tpl" />
        
    </type>
    
    <type id="SM_DATATYPE_URL" valuetype="string">
        
        <label>Uniform Resource Locator</label>
        <description>Points either to exterior files on the web (starting with http://) or files stored locally on the filesystem.</description>
        <usage>field,itemproperty</usage>
        <class>SmartestUrl</class>
        <long>false</long>
        <render template="System/Applications/Items/Presentation/CMS/property.url.tpl" />
        
    </type>
    
    <type id="SM_DATATYPE_TIMESTAMP" valuetype="string">
        
        <label>Date and Time</label>
        <description>An exact point in time - year, month, day, hour, minute, and second.</description>
        <usage>field,itemproperty,feed</usage>
        <class>SmartestDateTime</class>
        <long>false</long>
        <render template="System/Applications/Items/Presentation/CMS/property.timestamp.tpl" />
        
    </type>
    
    <type id="SM_DATATYPE_DATE" valuetype="string">
        
        <label>Date only</label>
        <description>A date that specifies year, month, and day of the month, but not the time.</description>
        <usage>field,itemproperty,feed</usage>
        <class>SmartestDateTime</class>
        <long>false</long>
        <render template="System/Applications/Items/Presentation/CMS/property.date.tpl" />
        
    </type>
    
</datatypes>